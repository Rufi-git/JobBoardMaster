@model List<JobBoardTemplate.Models.CategoryBlogModel>

<h4 class="widget_title">Category</h4>
<ul class="list cat-list">
    @foreach (var category in Model)
    {
        <li>
            <a href="#" class="d-flex">
                <p class="category-info">
                    @Html.ActionLink(category.Name, "DetailsBlog", "Category", routeValues: new { Id = category.Id }, htmlAttributes: new { @class = "category-detail" })
                    (@category.Blogs.Count)
                </p>
            </a>
        </li>
    }

</ul>
