@model JobBoardTemplate.Models.CommentModel

<div class="comment-form">
    <h4>Leave a Reply</h4>
    @using (Html.BeginForm("Add", "Comment", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            @Html.HiddenFor(x=>x.BlogId)
            <div class="col-12">
                <div class="form-group">
                    @Html.LabelFor(x => x.Text)
                    @Html.TextAreaFor(x => x.Text, rows: 10, columns: 30, htmlAttributes: new { @class = "form-control w-100" })
                    @Html.ValidationMessageFor(x => x.Text)
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(x => x.Name)
                    @Html.TextBoxFor(x => x.Name, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Name)
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(x => x.Email)
                    @Html.TextBoxFor(x => x.Email, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
            </div>
            <div class="col-12">
                <div class="form-group">
                    @Html.LabelFor(x => x.Website)
                    @Html.TextBoxFor(x => x.Website, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Website)
                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="button button-contactForm btn_1 boxed-btn" id="send_request">Send Message</button>
        </div>
    }
</div>

