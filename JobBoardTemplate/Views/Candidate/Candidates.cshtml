@model List<JobBoardTemplate.Models.CandidateModel>



<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="section_title text-center mb-40">
                <h3>Featured Candidates</h3>
            </div>
        </div>
    </div>
    <div class="row">

        <div class="col-lg-12">
            <div class="candidate_active owl-carousel">
                @foreach (var candidates in Model)
                {
                    string[] user = { @candidates.AppUser.Name, @candidates.AppUser.Surname };
                    string userInfo = String.Join(" ", user);
                    <div class="single_candidates text-center">
                        <div class="image-candidate">
                            <img src="~/Content/img/users/@candidates.AppUser.ImagePath" alt="">
                        </div>
                        <h4 class="candidate-details">@Html.ActionLink(userInfo, "Details", "Candidate", routeValues: new { Id = candidates.Id }, htmlAttributes: new { @class = "details" })</h4>
                        <p>@candidates.Occupation</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
