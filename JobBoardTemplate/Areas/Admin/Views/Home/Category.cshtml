@model List<JobBoardTemplate.Data.CategoryJob>
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div id="main">
    <header class="mb-3">
        <a href="#" class="burger-btn d-block d-xl-none">
            <i class="bi bi-justify fs-3"></i>
        </a>
    </header>

    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>DataTable</h3>
                    <p class="text-subtitle text-muted">For user to check they list</p>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">DataTable</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <section class="section">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between">
                    Simple Datatable
                    @Html.ActionLink("Add Category", "AddCategory", "Category",new { @class="btn btn-info"})
                </div>
                <div class="card-body">
                    <table class="table table-striped" id="table1">
                        <thead>
                            <tr class="text-center">
                                <th>Name</th>
                                <th>Popular</th>
                                <th>Order</th>
                                <th>Active</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td class="border-2">@category.Name</td>
                                    <td class="border-2 text-center">
                                        @if (category.IsPopular == true)
                                        {
                                            <span class="badge bg-success">
                                                Popular
                                            </span>
                                        }
                                        else
                                        {

                                            <span class="badge bg-danger">
                                                Not Popular
                                            </span>
                                        }
                                    </td>
                                    <td class="border-2 text-center">@category.Order</td>
                                    <td class="border-2 text-center">
                                        @if (category.IsActive == true)
                                        {
                                            <span class="badge bg-success">
                                                Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                Not Active
                                            </span>
                                        }
                                    </td>
                                    <td class="border-2 text-center">
                                        @Html.ActionLink("Edit", "EditCategoryJob", "Category", routeValues: new { Id = category.Id }, htmlAttributes: new { @class = "btn btn-warning" })
                                    </td>
                                    <td class="border-2 text-center">
                                        <button type="button" class="btn btn-danger block"
                                                data-bs-toggle="modal" data-bs-target="#modelDeleteCat_@category.Id">
                                            Delete
                                        </button>

                                        <div class="modal fade" id="modelDeleteCat_@category.Id" tabindex="-1" role="dialog"
                                             aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered modal-dialog-centered modal-dialog-scrollable"
                                                 role="document">
                                                <div class="modal-content text-center">
                                                    <div class="modal-header text-center">
                                                        <h4 style="margin-left:150px">
                                                            @category.Name
                                                        </h4>
                                                        <button type="button" class="close" data-bs-dismiss="modal"
                                                                aria-label="Close">
                                                            <i data-feather="x"></i>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p style="color:#000000; font-size:1.5em">
                                                            This category will be permanently deleted<br />
                                                        </p>
                                                        <span style="font-size:1em">Do you really want to delete?</span>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-light-secondary"
                                                                data-bs-dismiss="modal">
                                                            <i class="bx bx-x d-block d-sm-none"></i>
                                                            <span class="d-none d-sm-block">Close</span>
                                                        </button>
                                                        @Html.ActionLink("Delete", "Delete", "Category", routeValues: new { Id = category.Id }, htmlAttributes: new { @class = "btn btn-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </section>
    </div>

    <footer>
        <div class="footer clearfix mb-0 text-muted">
            <div class="float-start">
                <p>2021 &copy; Mazer</p>
            </div>
            <div class="float-end">
                <p>
                    Crafted with <span class="text-danger"><i class="bi bi-heart"></i></span> by <a href="http://ahmadsaugi.com">Ə. Rufi</a>
                </p>
            </div>
        </div>
    </footer>
</div>

